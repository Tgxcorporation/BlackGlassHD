<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!--version="1.0" encoding="utf-8"-->
<window>
	<controls>
		<!-- Top Bar controls -->

		<control>
			<type>group</type>
			<dimColor>#MainColor</dimColor>
			<animation effect="fade" time="150">WindowClose</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" start="1350,0" reversible="false" condition="window.isvisible(96742)">conditional</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="1350,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="sine" easing="in" time="200" end="291,0" condition="!control.hasfocus(50)+!control.isvisible(51)+!control.hasfocus(505050)">conditional</animation>
			<visible>control.isvisible(51)</visible>
			<animation effect="slide" tween="circle" easing="out" time="200" start="1350,0">visible</animation>
            <control Style="WindowTitle">
                <type>fadelabel</type>
                <label>#header.label</label>
            </control>
            <control Style="WindowSubTitle">
                <type>fadelabel</type>
                <label>#(L(100000))</label>
            </control>
            <control Style="WindowTitle">
                <description>Time</description>
                <type>label</type>
                <posX>1887</posX>
                <label>#time</label>
                <align>right</align>
            </control>
            <control Style="WindowSubTitle">
                <description>Date</description>
                <type>label</type>
                <posX>1887</posX>
                <label>#date</label>
                <align>right</align>
                <visible>!plugin.isenabled(World Weather)</visible>
            </control>
            <control Style="WindowSubTitle">
                <description>Date</description>
                <type>label</type>
                <posX>1887</posX>
                <label>#WorldWeather.TodayTemperature     #date</label>
                <align>right</align>
                <visible>plugin.isenabled(World Weather)</visible>
            </control>

			<control>
				<description>Default Image</description>
				<type>image</type>
				<id>1</id>
				<posX>15</posX>
				<posY>135</posY>
				<width>540</width>
				<height>540</height>
				<texture>Categories\Movies.png</texture>
				<keepaspectratio>yes</keepaspectratio>
				<animation effect="slide" tween="circle" easing="out" time="200" start="1350,0">visible</animation>
				<visible>control.isvisible(51)+!control.HasThumb(100)</visible>
			</control>
			<control>
				<description>Default Image</description>
				<type>image</type>
				<id>100</id>
				<posX>15</posX>
				<posY>135</posY>
				<width>540</width>
				<height>540</height>
				<texture>Categories\#MovingPictures.SelectedNode.name.png</texture>
				<keepaspectratio>yes</keepaspectratio>
				<animation effect="slide" tween="circle" easing="out" time="200" start="1350,0">visible</animation>
				<visible>control.isvisible(51)</visible>
			</control>
		</control>

		<control>
			<type>group</type>
			<dimColor>#MainColor</dimColor>
			<animation effect="fade" time="150">WindowClose</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" start="1350,0" reversible="false" condition="window.isvisible(96742)">conditional</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="1350,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="sine" easing="in" time="200" end="291,0" condition="!control.hasfocus(50)+!control.isvisible(51)+!control.hasfocus(505050)">conditional</animation>
			<visible>control.isvisible(50)</visible>
			<animation effect="slide" tween="circle" easing="out" time="200" start="1350,0">visible</animation>
            <control Style="WindowTitle">
                <type>fadelabel</type>
                <label>#header.label</label>
            </control>
            <control Style="WindowSubTitle">
                <type>fadelabel</type>
                <label>#(iif(eq(#MovingPictures.Filter.Name,' '),'#MovingPictures.CurrentNode.name','#MovingPictures.CurrentNode.name / #MovingPictures.Filter.Name'))</label>
            </control>
            <control Style="WindowTitle">
                <description>Time</description>
                <type>label</type>
                <posX>1887</posX>
                <label>#time</label>
                <align>right</align>
            </control>
            <control Style="WindowSubTitle">
                <description>Date</description>
                <type>label</type>
                <posX>1887</posX>
                <label>#date</label>
                <align>right</align>
                <visible>!plugin.isenabled(World Weather)</visible>
            </control>
            <control Style="WindowSubTitle">
                <description>Date</description>
                <type>label</type>
                <posX>1887</posX>
                <label>#WorldWeather.TodayTemperature     #date</label>
                <align>right</align>
                <visible>plugin.isenabled(World Weather)</visible>
            </control>
		</control>
		<!-- DETAILS -->
		<control>
			<type>group</type>
			<dimColor>#MainColor</dimColor>
			<animation effect="fade" time="150">WindowClose</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" start="1350,0" reversible="false" condition="window.isvisible(96742)">conditional</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="1350,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="sine" easing="in" time="200" end="291,0" condition="!control.hasfocus(6)+[!control.isvisible(50)]+!control.hasfocus(505060)+!control.hasfocus(90001)">conditional</animation>
			<visible>!control.isvisible(50)+!control.isvisible(51)</visible>
            <control Style="WindowTitle">
                <type>fadelabel</type>
                <label>#header.label</label>
            </control>
            <control Style="WindowSubTitle">
                <type>fadelabel</type>
                <label>#(L(1020))</label>
            </control>
            <control Style="WindowTitle">
                <description>Time</description>
                <type>label</type>
                <posX>1887</posX>
                <label>#time</label>
                <align>right</align>
            </control>
            <control Style="WindowSubTitle">
                <description>Date</description>
                <type>label</type>
                <posX>1887</posX>
                <label>#date</label>
                <align>right</align>
                <visible>!plugin.isenabled(World Weather)</visible>
            </control>
            <control Style="WindowSubTitle">
                <description>Date</description>
                <type>label</type>
                <posX>1887</posX>
                <label>#WorldWeather.TodayTemperature     #date</label>
                <align>right</align>
                <visible>plugin.isenabled(World Weather)</visible>
            </control>
		</control>
	</controls>
</window>